<%= form_for(@employee) do |f| %>

    <% if @employee.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this vacancy from being saved:</h2>

          <ul>
            <% @employee.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, 'ФИО' %>
      <%= f.text_field :name, placeholder: 'Только кириллица', class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.label :contacts, 'Контактная информация' %>
      <%= f.text_field :contacts, placeholder: 'Email или номер телефона', class: 'form-control' %>
    </div>

     <!--todo-->
    <div class="form-group">
      <%= f.label :status, 'Ищу работу' %>
      <%= f.radio_button :status, true %>
      <%= f.label :status, 'Не ищу работу' %>
      <%= f.radio_button :status, false %>
    </div>

    <div class="form-group">
      <%= f.label :salary, 'Зарплата' %>
      <%= f.text_field :salary, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :skills_data, 'Навыки' %>
      <%= f.text_field :skills_data, id: 'skills_input' %>
    </div>

    <div class="actions">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'вернуться', :back %>
    </div>
<% end %>
